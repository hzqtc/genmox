[
  {
    "name": "Homebrew status",
    "command": "/path/to/monitors/brew-status/brew-status.sh",
    "interval": 1800
  },
  {
    "name": "Clipboard color strings",
    "command": "/path/to/monitors/clipboard-color/clip_color.py",
    "interval": 1
  },
  {
    "name": "Git repos",
    "command": "/path/to/monitors/git-repo/repo-status.sh",
    "args": ["/Users/yourname/path/to/repos"],
    "interval": 60
  },
  {
    "name": "Now playing",
    "command": "/path/to/monitors/now-playing/mpd-monitor.sh",
    "interval": 1
  },
  {
    "name": "Shipping status",
    "command": "/path/to/monitors/shipping/shipping-status.sh",
    "interval": 1800
  },
  {
    "name": "Stock prices",
    "command": "/path/to/monitors/stock-price/stock-price.sh",
    "args": ["GOOG", "AAPL", "META", "MSFT", "AMZN", "NVDA", "TSLA"],
    "interval": 1800
  },
  {
    "name": "World clock",
    "command": "/path/to/monitors/world-clock/world-clock.sh",
    "args": ["Asia/Shanghai", "America/New_York", "Europe/Zurich"],
    "interval": 30
  },
  {
    "name": "System info",
    "command": "/path/to/monitors/sysinfo/sysinfo.sh",
    "interval": 5
  }
]
